<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detail.chuangzuo.Image0">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/p600">

        <ImageView
            android:id="@+id/bg0"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/image0"
            android:layout_width="@dimen/p512"
            android:layout_height="@dimen/p320"
            android:layout_centerInParent="true"
            android:src="@drawable/image0" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/p600"
        android:layout_marginTop="@dimen/p30">


        <ImageView
            android:id="@+id/bg1"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/image1"
            android:layout_width="@dimen/p640"
            android:layout_height="@dimen/p360"
            android:layout_centerInParent="true"
            android:src="@drawable/image1" />


    </RelativeLayout>

</LinearLayout>